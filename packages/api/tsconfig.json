{
  "compilerOptions": {
    "resolveJsonModule": true,

    "sourceMap": true,
    "declaration": true,
    "module": "NodeNext",
    "target": "ESNext",
    "moduleResolution": "NodeNext",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "outDir": "./dist",        "strictNullChecks": true
  },
  "include": ["./**/*.ts"],
  "exclude": ["node_modules", "dist"],
  "ts-node": {
          "transpileOnly": true,
          "files": true,
          "experimentalResolver": true
  }
}
